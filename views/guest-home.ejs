<script>
window.onload = function(){
    
}
</script>
<style>

    .blue{
        background: lightblue;
    }
    .list_scroll{
        height: 500px;
        overflow: scroll;
    }
    a:link, a:visited{
        color: black;
        text-decoration: none;
    }
    .wbox{
        width:100%;
        height:100px;    
    }
    .hbox{
        width:100px;
        height:100%;
    }
    .search_box{
        width: 100px;
        height: 100%;
    }
    .list_scroll>.col:nth-child(2n+1){
        background-color: white;
        text-align: center;
        font-size: larger;
        font-family: 'Noto Sans TC', sans-serif;
    }
    .list_scroll>.col:nth-child(2n){
        background-color: lightgray;
        text-align: center;
        font-size: larger;
        font-family: 'Noto Sans TC', sans-serif;
    }
    .list_scroll>.col:hover{
        background: lightslategrey;
    }
</style>




<div class="container blue">

    <div class="container">
        <nav class="navbar navbar-light red ">
            <form class="container-fluid">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="請輸入店家名稱" aria-label="Username" aria-describedby="basic-addon1">
                    <button  class="btn btn-outline-success" type="submit">搜尋</button>
                </div>
            </form>
        </nav>
        
        <div class="col gray">
            <p>商家列表</p>
        </div>
    </div>
    <div class="container list_scroll">
        <% for(let shop of list){ %>
        <div class="col">
            <a href="/shop/<%=shop.id%>"><%= shop.name %></a>
        </div>
        <% } %>

    </div>
</div>
