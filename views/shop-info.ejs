<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
<style>
    .big_container{
        margin-top: 50px;
    }
    .bscolor{
        border: 1pt solid black;
        width: 1000px;
    }
    .blue{
        background: lightblue;
    }
    .list_scroll{
        height: 500px;
        overflow: scroll;
    }
    a:link, a:visited{
        color: black;
        text-decoration: none;
    }
    .wbox{
        width:100%;
        height:100px;    
    }
    .hbox{
        width:100px;
        height:100%;
    }
    .search_box{
        width: 100px;
        height: 100%;
    }
    .white{
        background-color: white;
        text-align: center;
        font-size: larger;
        font-family: 'Noto Sans TC', sans-serif;       
    }
    .gray{
        background-color: ghostwhite;
        text-align: center;
        font-size: larger;
        font-family: 'Noto Sans TC', sans-serif;
        margin-top: 20px;
        margin-bottom: 20px;
        margin-right: 250px;
        margin-left: 250px;
        border: 1px solid black;
    }
    .btn_color{
        border: 1pt solid black;
        font-size: 15px;
        color: black;
    }   
</style>




<div class="big_container">

    <div class="container bscolor" style="text-align: center;">
        <h1><%= data.name %></h1>
        <div class="col white">
            <b>商家簡介</b>
        </div>
        <div class="gray">
            <p><%= data.intro || "暫無" %></p>
        </div>
        <div class="col white">
            <b>商家地址</b>
        </div>
        <div class="gray">
            <p><%= data.address || "暫無" %></p>
        </div>
        <div class="col white">
            <b>商家聯絡方式</b>
        </div>
        <div class="gray">
            <%= data.contact || "暫無" %>
        </div>
        <div class="col white">
            <b>商家營業時間</b>
        </div>
        <div class="gray">
            24hr不營業
        </div>
        <div class="col white">
            <button class="btn btn-outline-success btn_color" type="submit" onclick="location.href='/shop/<%=data.id%>/preorder'">預約情況</button>
        </div>
        
    </div>
</div>
