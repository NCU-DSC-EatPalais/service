<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
<style>
  .wbox{
    width:100%;
    /* height:300px;     */
  }
  .hbox{
    width:100px;
    height:100%;
  }

  .T_red{
    background: red;
  }
  .red{
    background: rgb(255, 218, 10);
  }
  .pink{
    background: pink;
  }
  .blue{
    background: lightskyblue;
  }
  .green{
    background: limegreen;
  }
  .btnmargin{
    margin: 5px;
  }
  .labelmargin{
    margin-bottom: 5px;
    margin-top: 5px;
  }
  .t_center{
    text-align: center;
  }

  .t_right{
    text-align: right;
  }
  .introbox{
    padding: 10px;
  }
  .marginbottom{
      margin-bottom: 50px;
  }
  .margintop{
      margin-top: 10px;
  }

  .paddingtop{
      padding-top: 10px;
  }
  .paddings{
      padding-top: 10px;
      padding-bottom: 10px;
      padding-left: 20px;
      padding-right: 30px;
  }

  .paddinglr{
      /* padding-left: 20px;
      padding-right: 20px; */
      align-items: center;
      display: flex;
  }
  main{
    font-size: 24px;
  }
  .fucking-can-be-order{
    transition-duration: 1s;
  }
  .fucking-can-be-order:hover{
    transform:rotate(360deg);
  }
</style>
<body>
  <header>
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand">Social Distence Free</a>
        <span class="navbar-text">
            歡迎，<%= name %>
        </span>
        <form class="d-flex" action="/api/v1/logout">
          <% if( name!="訪客" ) { %>
            <div class="btn btn-outline-success btnmargin" onclick="location.href='/api/v1/logout'">登出</div>
          <% }else{ %>
            <div class="btn btn-outline-success btnmargin" type="button" value="登入" onclick="location.href='/login'">登入</div>
          <% } %>
        </form>
      </div>
    </nav>
  </header>
  <main class="container wbox paddings margintop">
    <div class="row justify-content-center">
      <div  class="col-auto border " style="text-align: center; color:red">
      </div>
    </div>
    <h1 style="text-align: center;"><%= month %>月<%= day %>日預約情況</h1>
    <div class="row">
      <div class="col">
        <div class="row">
          <div class="col t_center">
            <h2 style="text-align: center;">按時段顯示</h2>
          </div>
        </div>

        <% for(let el of schedule ){ %>
          <% if( el.count > 5 ){ %>
          
        <div class="row justify-content-center">
          <div class="col-auto green paddinglr">
            <%=el.text%>:00~<%=el.text%>:59
          </div>
          <div class="col-auto blue">
            預約已滿
          </div>
        </div>
          <% }else{ %>

        <div class="row justify-content-center">
          <div class="fucking-can-be-order col-auto red paddinglr" style="box-shadow: 5px 5px 5px 5px rgba(0, 0, 0, 0.2); margin: 15px;">
            <div class="col-auto red paddinglr">
              <%=el.text%>:00 ~ <%=el.text%>:59
            </div>
            <div class="col-auto pink">
              <button class="btn btn-outline-success btnmargin" onclick="location.href='<%= el.link %>'">我要預約</button>
            </div>
          </div>
        </div>
          <% } %>
        <% } %>


        <!-- <div class="row justify-content-center">
          <div class="col-auto green paddinglr">
            13:00~14:00
          </div>
          <div class="col-auto blue">
            預約已滿
          </div>
        </div> -->


      </div>
    </div>
  </main>

  </body>
